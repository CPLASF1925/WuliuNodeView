<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent"
        app:cardCornerRadius="8dp">

        <!--<include layout="@layout/mine_address_pop"></include>-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ll_mine_total_root"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:background="@drawable/transparent"
                android:orientation="vertical">

                <include layout="@layout/mine_address_pop_title"></include>

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp">


                    <com.example.administrator.mygitapplication.LogisticsInformationView
                        android:id="@+id/logistics_InformationView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff"

                        app:radius="5dp"
                        app:width="2dp">
                        <!--android:id="@+id/lv_mine_address_pop"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="#000"-->
                    </com.example.administrator.mygitapplication.LogisticsInformationView>


                </android.support.v4.widget.NestedScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eee"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/g_xu"
                    android:gravity="center"
                    android:text="本数据由菜鸟裹裹提供"
                    android:textColor="#808080"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>